{
  "compilerOptions": {
    "moduleResolution": "node",
    "moduleDetection": "force",
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@fluid/*": [
        "./src/*"
      ],
      "@fluidcore/*": [
        "./src/core/*"
      ],
      "@fluidlib/*": [
        "./src/lib/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "prepare": "npm run build"
  }
}